#include<stdio.h>

int main()
{
    int a[10] = {46,79,33,58,64,87,95,12,22,6},x,pos=0;
    printf("\n=========================================================\n");
      printf("                     LINEAR SEARCH                       ");
    printf("\nNAME : TANVEER AHMED ANSARI\nROLL NO. : 1901610100218\n");
    printf("\nenter value to be searched :");
    scanf("%d",&x);
    printf("\nArray :\n");
    for(int i=0;i<10;i++)
    {
        if(x==a[i])
        {  
           pos=i+1;
           printf("*"); 
        }
          printf("%d ",a[i]);
    }
    if(pos)
     printf("\n\n%d is at position no. %d..",x,pos);
    else
     printf("\n\n%d is not present..",x);
    printf("\n===========================================================\n");
    return 0;
}
